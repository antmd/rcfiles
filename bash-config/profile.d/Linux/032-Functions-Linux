
if [[ -n "$OS_LINUX" ]]; then

numcores() {
    cat /proc/cpuinfo | grep -c processor
}

swapuse() {
    for file in /proc/*/status ; do awk '/VmSwap|Name/{printf $2 " " $3}END{ print "" }' $file; done | sort -k 2 -n -r | less
}

numcores() {
    cat /proc/cpuinfo | grep -c processor
}

fi # if LINUX

